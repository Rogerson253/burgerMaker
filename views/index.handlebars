<h1>Burgers</h1>

<ul>
  {{#each burgers}}
  	<li>
  	   <p>ID: {{this.id}}</p>
       <p>Burger: {{this.burger_name}}</p>
       <button>Devour me!</button>
  	</li>
  {{/each}}
</ul>

<form class="create-form">

  <div class="form-group">
    <label for="burg">Create Burger:</label>
    <input type="text" id="burg" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>

